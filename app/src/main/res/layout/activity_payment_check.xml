<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBlue"
    tools:context="supinternet.pfe_dutyfree.PaymentCheck">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/PaymentCheckStatus"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/returnToMainActivity"
        android:onClick="returnToMainActivity"
        android:text="@string/returnToMainActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:background="@color/yellowPrimary"
        android:layout_alignParentBottom="true" >
    </Button>
</RelativeLayout>
